{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/src/rest/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/src/rest/$1" },
    { "src": "/(.*)", "dest": "frontend/$1" }
  ],
  "headers": [
    {
      "source": "/manifest.json",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/src/rest/scrape.ts",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/src/rest/cleanOldRecords.ts",
      "schedule": "0 4 * * *"
    }
  ]
}
