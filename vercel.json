{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/src/*",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "frontend/$1" }
  ],
  "crons": [
    {
      "path": "/api/src/rest/scrape.ts",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/src/rest/cleanOldRecords.ts",
      "schedule": "0 4 * * *"
    }
  ]
}
